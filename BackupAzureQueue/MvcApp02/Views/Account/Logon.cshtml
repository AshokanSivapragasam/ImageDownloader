@model MvcApp02.Models.LogonViewModel

@{
    ViewBag.Title = "Logon";
}

@using (Html.BeginForm("Logon", "Account", null, FormMethod.Post, new { @class = "w3-container w3-card-4" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <h2>Login</h2>

        <div class="w3-group">
            @Html.TextBoxFor(model => model.UserName, new { @class = "w3-input", style = "width: 90%", required = "" })
            @Html.LabelFor(model => model.UserName, new { @class = "w3-label", style = "width: 90%"})
            @Html.ValidationMessageFor(model => model.UserName)
        </div>

        <div class="w3-group">
            @Html.PasswordFor(model => model.Password, new { @class = "w3-input", style = "width: 90%", required = "" })
            @Html.LabelFor(model => model.Password, new { @class = "w3-label", style = "width: 90%" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <p>
            <input type="submit" value="Save" class="w3-btn w3-large w3-theme"/>
        </p>
}

